.grayBase
  %section.login__outer
    %p.modal03__title ログイン
    %a.btnLogin03 新規登録はこちら
    .modal03_block
      .modal03__leftblock
        %p.modal03__block__title SNSでログイン
        %form.snsButton
          %button.registFacebook Facebook
        %form.snsButton
          %button.registTwitter Twitter
        %form.snsButton
          %button.registLINE LINE
        %form.snsButton
          %button.registAmeba Ameba
      .modal03__rightblock
        %p.modal03__block__title Makuake IDでログイン
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .kurumi
            .note
              メールアドレス
            = f.email_field :email, { class: "loginForm" }
          .kurumi
            .note
              パスワード
              %p.notes
                *半角英数字
                %br
                6文字以上
            = f.password_field :password, autocomplete: "off", id: "loginpassword", class: "loginForm"
          .modal03__btn__block
            = f.submit "ログイン", { class: "submitBtn03 btncol_03"}
            %a.modal03__forgetPass パスワードを忘れた方はこちら
